<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/dog_information"
        android:key="pref_key_dog_settings">
        <EditTextPreference
            android:key="pref_key_dog_name"
            android:summary="@string/pref_summary_dog_name"
            android:title="@string/pref_title_dog_name"
            android:defaultValue="Fido"/>
        <EditTextPreference
            android:key="pref_key_dog_age"
            android:summary="@string/pref_summary_dog_age"
            android:title="@string/pref_title_dog_age"
            android:defaultValue="42"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/apps_appearance"
        android:key="pref_key_dog_settings">
        <CheckBoxPreference
            android:key="pref_key_beat_heartbeat"
            android:defaultValue="false"
            android:summary="@string/pref_summary_beat_heartbeat"
            android:title="@string/pref_title_beat_heartbeat"/>
        <Preference
            android:key="pref_key_app_appearance"
            android:summary="@string/pref_summary_app_appearance"
            android:title="@string/pref_title_app_appearance"/>
    </PreferenceCategory>


</PreferenceScreen>